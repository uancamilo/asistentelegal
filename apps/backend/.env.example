# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require&connection_limit=10"

# Admin credentials (for init scripts)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="CHANGE_ME_MIN_8_CHARS"
SECONDARY_ADMIN_PASSWORD="CHANGE_ME_MIN_8_CHARS"
EDITOR_PASSWORD="CHANGE_ME_MIN_8_CHARS"

# Application
PORT=8080
NODE_ENV=development

# CORS & Frontend
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# JWT Authentication (generate with: openssl rand -base64 32)
JWT_SECRET="CHANGE_ME_MIN_32_CHARS"
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET="CHANGE_ME_DIFFERENT_MIN_32_CHARS"
JWT_REFRESH_EXPIRATION=7d

# Redis (optional - falls back to in-memory if not set)
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# File Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=application/pdf

# Queue
QUEUE_PDF_CONCURRENCY=2
QUEUE_MAX_RETRIES=3

# Email SMTP (leave empty for dev - emails will only be logged)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="AsistenciaLegal <noreply@yourdomain.com>"
SMTP_SECURE=false
